<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Include shared preferences -->
    <include domain="sharedpref" path="."/>

    <!-- Include databases -->
    <include domain="database" path="vector_database"/>
    <include domain="database" path="emergency_database"/>
    <include domain="database" path="cbt_database"/>
    <include domain="database" path="plant_database"/>
    <include domain="database" path="quiz_database"/>

    <!-- Exclude large model files -->
    <exclude domain="file" path="models/"/>

    <!-- Exclude cache -->
    <exclude domain="cache" path="."/>

    <!-- Exclude temporary files -->
    <exclude domain="file" path="temp/"/>
    <exclude domain="file" path="downloads/"/>
</full-backup-content>